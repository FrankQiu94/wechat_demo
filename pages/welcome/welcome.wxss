.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user_avatar {
  width:200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}

.user_name {
  margin-top: 100rpx;
  font-weight: 700;
  font-size: 32rpx;
}

.moto_container,
.moto_user {
  width: 200rpx;
  height: 80rpx;
  border: 1rpx solid #405f80;
  border-radius: 5rpx;
  text-align: center;
}

.moto_user {
  margin-top: 120rpx;
}

.moto_container {
  margin-top: 20rpx;  
}

.moto_container:active,
.moto_user:active {
  background-color: #405f80;
}

.moto_container:active .moto,
.moto_user:active .moto {
  color: #b3d4db
}

.moto {
  font-weight: 700;
  font-size: 22rpx;
  line-height: 80rpx;
  color: #405f80;
}

page {
  height: 100%;
  background-color: #b3d4db;
}