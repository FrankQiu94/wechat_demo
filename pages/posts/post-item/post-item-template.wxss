.post_container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-bottom: 5px;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  background-color: #fff;
}
.post_author_date {
  margin: 10rpx 0 20rpx 10rpx;
}
.post_author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post_date {
  margin-left: 20rpx;
  margin-bottom: 10px;
  vertical-align: middle;
  font-size: 26rpx;
}
.post_title {
  margin-bottom: 10px;
  margin-left: 10px;
  font-weight: 600;
  font-size: 34rpx;
  color: #333;
}
.post_image {
  width: 100%;
  height: 340rpx;
  margin-left: 16px;
  margin: auto 0;
  margin-bottom: 15px;
}
.post_content {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}
.post_like {
  flex-direction: row;
  margin-left: 10px;
  font-size: 13px;
  line-height: 16px;
}
.post_like_image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post_like_font {
  margin-right: 20px;
  vertical-align: middle;
}