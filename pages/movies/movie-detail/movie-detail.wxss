/* pages/movies/movie-detail/movie-detail.wxss */
@import "/pages/movies/stars/stars-template.wxss";

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.head-img-hover {
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
}

.main-title {
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
  font-weight: 700;
  font-size: 19px;
  color: #fff;
}

.sub-title {
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.like {
  display: flex;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  margin-right: 10rpx;
  font-size: 22rpx;
  color: #f21146;
}

.plain-font {
  margin-right: 30rpx;
  font-size: 22rpx;
  color: #666;
}

.movie-img {
  position: absolute;
  top: 160rpx;
  right: 30rpx;
  width: 175rpx;
  height: 238rpx;
}

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title text {
  margin-bottom: 40rpx;
  font-weight: 700;
  font-size: 24rpx;
  color: #1f3463;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.hr {
  width: 100%;
  height: 1px;
  margin-top: 45rpx;
  background-color: #d9d9d9;
}

.synopsis {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.synopsis-font {
  color: #999;
}

.cast {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.cast-font {
  margin-bottom: 40rpx;
  color: #999;
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  text-align: center;
  white-space: normal;
}

.cast-imgs {
  white-space: nowrap;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}
